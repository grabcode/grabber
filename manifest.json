{
  "manifest_version": 2,
  "name": "Grabber, easy way to download the images",
  "short_name": "Grabber",
  "description": "Grab the images or soon other assets from within the active page",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Grabber",
    "default_popup": "popup.html"
  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "permissions": [
    "activeTab",
    "downloads"
  ]
}
